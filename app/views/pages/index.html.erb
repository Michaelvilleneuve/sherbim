<div class="home-heading">
	<div id="map" class="heading-map"></div>
	<div class="heading-content">
		<h2 class="heading-title">Choississez votre ville pour d√©couvrir les demandes de service</h2>
		<span class="heading-input_container">
			<input id="place" class="heading-input" type="text">
			<label for="place" class="heading-label">Votre ville</label>
		</span>
	</div>
</div>

<div class="service-container">
	<div class="container">

		<div class="row">
			<div class="filters">
				<ul class="category-list">
					<% @categories.each do |category| %>
						<li><a href="/<%= category.slug unless category.slug.nil? %>"><i class="pe-7s-<%= category.glyph unless category.glyph.nil? %>"></i><%= category.title %></a></li>
					<% end %>
				</ul>
			</div>
			<!-- Services list -->
			<ul class="service-list">				
				<% @services.each do |service| %>
					<li class="service-item col-xs-12">
						<div class="service-fig" style="background-color:<%= service.category.color unless service.category.color.nil?  %>">
							<i class="pe-7s-<%= service.category.glyph unless service.category.glyph.nil? %>"></i>
						</div>
						
						<div class="service-item_content">
							<h3 class="service-item_title"><%= service.title %></h3>
							<span class="service-item_points"><%= service.price.to_i %> pts</span>
							<ul class="service-category-list">
								<li class="category-item"><a href="<%= category.slug unless category.slug.nil? %>"><%= service.category.title unless service.category.nil? %></a></li>
							</ul>
							<ul class="detail-list">							
								<li class="detail-item"><%= service.user.name %> <%= image_tag service.user.image unless service.user.image.nil? %> </li>
								<li class="detail-item"><%= service.date.strftime('%e/%m/%Y') %></li>
								<li class="detail-item"><%= service.place %></li>
							</ul>						
							<%= link_to "En savoir plus", service, class: 'service-link' %>
						</div>
					</li>	
				<% end %>
			</ul>
		</div>
	</div>
</div>
