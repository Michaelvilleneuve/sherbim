<% if @service.statut %>
  Ce service a déjà été rendu
<% else %>
  Ce service est toujours demandé par <%= @service.user.name %>
<% end %>
<br>
<p>
  <strong>Title:</strong>
  <%= @service.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @service.description %>
</p>

<p>
  <strong>Place:</strong>
  <%= @service.place %>
</p>
<p>
  <strong>Nombre de personnes:</strong>
  <%= @service.nbpart %>
</p>

<p>
  <strong>Transport:</strong>
  <%= @service.transport %>
</p>

<p>
  <strong>Price:</strong>
  <%= @service.price %>
</p>

<p>
  <strong>Date:</strong>
  <%= @service.date %>
</p>


<% unless @service.statut %>
  <% if defined? session[:user_id] %>
      <% if session[:user_id] == @service[:user_id] %>
        <%= link_to 'Modifier', edit_service_path(@service) %> 
      <% else %>
        <%= link_to 'Toutes les demandes', root_path %> | <%= link_to 'Participer à l\'évènement', '/services/'+@service.id.to_s+'/participer' %>
      <% end %>
  <% end %>

  <% if defined? session[:user_id] %>
    <% if session[:user_id] == @service[:user_id] %>
  | <%= link_to 'Service terminé', '/services/'+@service.id.to_s+'/terminate' %>
    <% end %>
  <% end %>
<% end %>