<div class="home-heading">
	<div id="map" style="width:100%; height:800px;"></div>
</div>

<a href="/services/new" class="btn-ask">
	<span class="btn-ask_icon"></span>
	<span class="btn-ask_text">
		<span>Demander un service</span>
	</span>
</a>

<div class="service-container">
	<div class="container">
		<!-- Services list -->
		<ul class="service-list || row">
			<% @services.each do |service| %>
				<li class="service-item col-xs-12">
					<figure class="service-fig">
						<%= image_tag service.user.try(:image) %>
					</figure>
					<span class="service-points"><%= service.price %> pts</span>
					<div class="service-item_content">
						<h3 class="service-item_title"><%= service.title %></h3>
						<!--
						<ul class="category-list">
							<li class="category-item">Aide</li>
						</ul>
						-->
						<ul class="detail-list">							
							<li class="detail-item"><%= service.date.strftime('%e/%m/%Y') %></li>
							<li class="detail-item"><%= service.place %></li>
						</ul>						
						<%= link_to "En savoir plus", service, class: 'service-link' %>
					</div>
				</li>	
			<% end %>
		</ul>
	</div>
</div>
