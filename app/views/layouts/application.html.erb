<!DOCTYPE html>
<html>
<head>
  <title>Sherbim</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
 <% if current_user %>
    Connecté en tant que <strong><%= current_user.name %></strong>!
    <%= link_to "Se déconnecter", signout_path, id: "sign_out" %>
  <% else %>
    <%= link_to "Se connecter avec facebook", "/auth/facebook", id: "sign_in" %>
  <% end %>
<%= yield %>

</body>
</html>
