<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<%= image_tag @user.image %>
<p>
  <strong>Firstname:</strong>
  <%= @user.firstname %>
</p>

<p>
  <strong>Description:</strong>
  <%= @user.description %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @user.phone %>
</p>

<p>
  <strong>Age:</strong>
  <%= @user.age %>
</p>

<p>
  <strong>Points:</strong>
  <%= @user.points %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>


<div class="row">
  <% @services.each do |service| %>
    <div class="col-xs-4">
      <p><%= service.title %></p>
      <p><%= service.description %></p>
      <ul>
      <% service.participants.each do |participant| %>
        <li><%= participant.user.name %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>